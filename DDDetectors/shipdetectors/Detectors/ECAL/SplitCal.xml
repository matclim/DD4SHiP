<!-- ====================================================================== -->
<!--                                                                        -->
<!--    XML description of the complete SiD tracker detector                -->
<!--    of the SiD linear collider detector design.                         -->
<!--                                                                        -->
<!--    Contained are the required                                          -->
<!--      ++ global constants used uniquely by this module                  -->
<!--      ++ visualization attributes                                       -->
<!--      ++ the definition of the readout structure and the                -->
<!--         readout segmentation (if necessary)                            -->
<!--      ++ the include statements for the sensitive detectors and         -->
<!--         the corresponding support structure(s)                         -->
<!--                                                                        -->
<!--                                                                        -->
<!--   @author  M.Frank                                                     -->
<!--   @date    14/11/2014                                                  -->
<!--                                                                        -->
<!-- ====================================================================== -->

<lccdd>
  <!--  Definition of global dictionary constants          -->
  <define>
  </define>

  <!--  Definition of the used visualization attributes    -->
  <display>
    <vis name="SplitCalSensitiveVis"    alpha="0.8" r="0.0"  g="1.0"  b="0.0"  showDaughters="false" visible="true"/>
    <vis name="SplitCalAbsorberVis"     alpha="1.0" r="1.0"  g="0.0"  b="0.0"  showDaughters="false" visible="true"/>
    <vis name="TransparentVis"     alpha="0.0" r="0.4"  g="0.4"  b="0.0"  showDaughters="false" visible="false"/>
  </display>

  <!--  Definition of the readout segmentation/definition  -->
  <readouts>
    <readout name="SplitCalHits">
      <segmentation type="CartesianGridXY" grid_size_x="3.5*mm" grid_size_y="3.5*mm" />
      <id>system:8,barrel:3,module:4,layer:6,slice:5,x:32:-16,y:-16</id>
    </readout>        
  </readouts>

  <!--  Includes for sensitives and support                -->
  <include ref="SplitCalTest.xml"/>
<!--
-->
</lccdd>
